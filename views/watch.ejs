<html lang="ja">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>SimpleTube</title>
    <!-- <link rel="stylesheet" href="../../styles/top"> -->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400&display=swap');

        * {
            padding: 0;
            margin: 0;
            font-family: 'Noto Sans JP', sans-serif;
        }

        header {
            background: rgba(255, 255, 255, 0.84);
            border-radius: 16px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(8.3px);
            -webkit-backdrop-filter: blur(8.3px);
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            color: rgb(0, 0, 0);
            font-size: 10px;

            h1 {
                margin-left: 20px;
            }

            a {
                text-decoration: none;
                color: #000000;
            }

            input {
                border: none;
                font-size: 16px;
                width: 2rem;
                height: 2rem;
                border-radius: 5px;
                padding-left: 2rem;
                background: no-repeat left .5em center / 1em url("../icons/search");
                cursor: pointer;
                transition: width 0.2s, margin 0.2s;
                margin-right: 5px;

                &:hover {
                    background-color: #dfdfdf;
                }

                &:focus {
                    width: 10rem;
                    margin-left: 0;
                    outline: 1px #000000;
                    border: 1px solid #b3b3b3;
                    cursor: text;
                    background-color: white;
                }
            }

            .buttons {
                display: flex;
                align-items: center;
                justify-content: center;
                margin-right: 5rem;
            }

            a {
                background-color: #ffffff;
                min-width: 2rem;
                min-height: 2rem;
                display: flex;
                align-items: center;
                justify-content: center;
                cursor: pointer;

                &:hover {
                    border-radius: 5px;
                    background-color: #dfdfdf;
                }
            }

            h1 {
                padding-left: 2px;
                padding-right: 2px;
                min-width: 140px;
            }

            img {
                width: 17px;
            }
        }

        body {
            background-color: rgb(255, 255, 255)
        }

        main {
            text-align: center;
        }

        img {
            width: 70%;
        }



        .watch {
            margin-top: 1rem;

            .video {
                margin-left: 10%;
                margin-right: 10%;
                width: 80%;
                border: 1px solid #dfdfdf;
                margin-bottom: .5rem;
                border-radius: 8px;

                img {
                    margin-left: 2.5%;
                    margin-right: 2.5%;
                    width: 95%;
                    padding-top: 2.5%;
                    padding-bottom: 1.5%;
                    border: none;
                    border-radius: 0;
                }
            }

            .video-info {
                margin-left: 10%;
                margin-right: 10%;
                margin-top: 1rem;
                width: 80%;
                border: #dfdfdf solid 1px;
                height: 80px;
                border-radius: 8px;
                background: #ffffff;

                img {
                    width: 16px;
                    height: 16px;
                }

                .statistics {
                    display: flex;
                    margin-left: 0.5rem;
                    align-items: center;
                    margin-top: 0.5em;
                    img {
                        margin-left: 5px;
                        margin-right: 1px;
                        -webkit-user-select: none;
                        -moz-user-select: none;
                        user-select: none;
                        -webkit-user-drag: none;
                        -moz-user-select: none;
                    }

                    p {
                        margin-right: 5px;
                    }

                }

                pre {
                    border-radius: 8px;
                    margin-top: 1.5rem;
                    padding-top: 0.5rem;
                    padding-left: 0.5rem;
                    border: 1px solid #dfdfdf;
                    text-align: left;
                    white-space: pre-line;
                }


                .icon {
                    width: 32px;
                    height: 32px;
                    object-fit: cover;
                    border-radius: 50%;
                    margin-top: 5px;
                    margin-left: 0.5rem;
                    -webkit-user-select: none;
                    -moz-user-select: none;
                    user-select: none;
                    -webkit-user-drag: none;
                    -moz-user-select: none;
                }

                .title {
                    text-align: left;
                    margin-top: 0.5rem;
                    margin-left: 0.5rem;
                }
            }

            .channel-info {
                margin-top: 2.5rem;
                height: 50px;
                background: #ffffff;
                border: #dfdfdf solid 1px;
                align-items: center;
                justify-content: left;
                display: flex;
                border-radius: 8px;
                justify-content: space-between;
                display: flex;

                img {
                    justify-content: none;
                    margin-right: 5px;
                    border: 1px solid #bbbbbb;
                    -webkit-user-select: none;
                    -moz-user-select: none;
                    user-select: none;
                    -webkit-user-drag: none;
                    -moz-user-select: none;
                }

                p {
                    margin-right: 5px;
                }

                .channel {
                    display: flex;
                    align-items: center;
                }

                button {
                    -webkit-user-select: none;
                    user-select: none;
                    height: 30px;
                    width: 120px;
                    border: 1px solid #dfdfdf;
                    background: none;
                    border-radius: 5px;
                    cursor: pointer;
                    transition: all;
                    transition-duration: 0.2s;
                    margin-right: 0.5rem;

                    &:hover {
                        background: #dfdfdf;
                    }
                }
            }
        }

        .other {
            margin-left: 10%;
            margin-right: 10%;
            display: flex;
            width: 80%;
            height: 50%;

            .comment {
                width: 50%;
                min-height: 50%;
            }

            .recommended {
                width: 50%;
                min-height: 50%;
            }
        }

        .r-video {
            cursor: pointer;
            overflow-wrap: break-all;
            display: flex;
            background-color: #ffffff;
            border-radius: 8px;
            width: 100%;
            height: 200px;
            border: 1px solid #dfdfdf;
            margin-bottom: 1rem;
            transition: all;
            transition-duration: 0.2s;

            .v-Thumbnail {
                display: flex;
                margin-top: 10px;
                margin-left: 10px;
                border-radius: 8px;
                height: 180px;
                width: auto;
                -webkit-user-select: none;
                -moz-user-select: none;
                user-select: none;
                -webkit-user-drag: none;
                -moz-user-select: none;
            }

            .verified {
                width: 16px;
                height: 16px;
                margin-left: 5px;
                margin-top: 1rem;
                -webkit-user-select: none;
                -moz-user-select: none;
                user-select: none;
                -webkit-user-drag: none;
                -moz-user-select: none;
            }

            p {
                margin-top: 0.6rem;
                font-size: 18px;
                margin-left: 1rem;
            }

            .v-name {
                display: flex;
                margin-top: 1.5rem;
            }

            .v-title {
                width: calc(100% - 2rem);
                overflow-wrap: break-all;
            }

            .video-data {
                flex-grow: 1;
            }

        }
    </style>
</head>

<body>
