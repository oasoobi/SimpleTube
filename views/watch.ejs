    <div class="other">
        <!-- コメントと関連動画 -->
        <div class="comment"></div>
        <div class="recommended">
            <div class="r-video">
                <img src="https://yt.artemislena.eu/vi/lgq0OdRIEao/mqdefault.jpg" alt="Thumbnail" class="v-Thumbnail">
                <div class="video-data">
                    <p class="v-title">ブルーアーカイブ Blue Archive OST 59. RE Aoharu</p>
                    <div class="v-name">
                        <p>MO2</p>
                        <img src="../../icons/verified" alt="verified" class="verified">
